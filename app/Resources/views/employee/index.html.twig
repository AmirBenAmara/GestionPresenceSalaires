                                </thead>
                                <tfoot>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Cin</th>
                                    <th>Numtel</th>
                                    <th>salaire/jour</th>
                                    <th>Actions</th>
                                </tr>
                                </tfoot>
