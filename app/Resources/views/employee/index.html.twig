                                        <td class="text-dark">{{ employee.nom }}</td>
                                        <td class="text-dark">{{ employee.prenom }}</td>
                                        <td class="text-dark">{{ employee.CIN }}</td>
                                        <td class="text-dark">{{ employee.numTel }}</td>
                                        <td class="text-dark">{{ employee.salaireJournalier }}</td>
                                        <td>
                                                    <a class="btn btn-primary" href="{{ path('employee_show', { 'idEmployee': employee.idEmployee }) }}">Rapport</a>
