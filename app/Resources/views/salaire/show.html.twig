{% extends 'base.html.twig' %}

{% block body %}
    <h1>Salaire</h1>

    <table>
        <tbody>
            <tr>
                <th>Idsalaire</th>
                <td>{{ salaire.idSalaire }}</td>
            </tr>
            <tr>
                <th>Datepayment</th>
                <td>{% if salaire.datePayment %}{{ salaire.datePayment|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Montantweek</th>
                <td>{{ salaire.montantweek }}</td>
            </tr>
            <tr>
                <th>Avance</th>
                <td>{{ salaire.avance }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('salaire_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('salaire_edit', { 'idSalaire': salaire.idSalaire }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
